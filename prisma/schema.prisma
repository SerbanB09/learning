generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
  binaryTargets = ["darwin-arm64", "darwin"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model accounts {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model users {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  account_id String
  first_name String
  last_name  String
  email      String
  password   String
  roles      String[]
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model venues {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  account_id String
  name       String
  address    String
}

model table_types {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  account_id String
  name       String
  width      Float
  height     Float
}

model areas {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  venue_id String
  name     String
  width    Float
  height   Float
}

model tables {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  area_id       String
  table_type_id String
  name          String
  seat_count    Int
  position_x    Float
  position_y    Float
}

model bookings {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id      String
  venue_id     String
  table_id     String
  person_count Int
  date         DateTime
  note         String
}
