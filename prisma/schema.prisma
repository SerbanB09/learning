generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
  binaryTargets = ["darwin-arm64", "darwin"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model accounts {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model users {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  account_id String
  first_name String
  last_name  String
  email      String
  password   String
  roles      String[]
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model venues {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  account_id String
  name       String
  address    String
}
